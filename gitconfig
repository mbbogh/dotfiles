[push]
  default = simple

[alias]
  st = status
  co = checkout
  br = branch
  up = rebase
  ci = commit

[diff]
  tool = meld
[difftool "meld"]
  cmd = meld \"$LOCAL\" \"$REMOTE\"
[mergetool]
  keepBackup = true

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  pager = true

[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold

[color "branch"]
  remote = yellow

# https://mirrors.edge.kernel.org/pub/software/scm/git/docs/git-config.html
[color "decorate"]
    tag = magenta

[core]
  editor = vim
